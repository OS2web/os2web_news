<?php

/**
 * Implements hook_preprocess_paragraph().
 *
 * Adding news block paragraph.
 */
function os2web_news_preprocess_paragraph__os2web_news_block(&$variables) {
  if ($variables['view_mode'] == 'preview') {
    return;
  }

  $paragraph = $variables['paragraph'];

  // Getting the related section.
  $section_term_id = NULL;
  $section_term_id = $paragraph->get('field_os2web_news_par_section')->target_id;

  if ($section_term_id) {
    $variables['content'][] = views_embed_view('os2web_news', 'os2web_news_embed_limited', $section_term_id);
  }
  else {
    $variables['content'][] = views_embed_view('os2web_news', 'os2web_news_embed_limited');
  }
}

